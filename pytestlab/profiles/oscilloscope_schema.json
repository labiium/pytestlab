{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "manufacturer": {
            "type": "string"
        },
        "model": {
            "type": "string"
        },
        "vendor_id": {
            "type": "string"
        },
        "product_id": {
            "type": "string"
        },
        "device_type": {
            "type": "string"
        },
        "trigger": {
            "type": "object",
            "properties": {
                "modes": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "slopes": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "channels": {
            "type": "object",
            "patternProperties": {
                "^[0-9]+$": {
                    "type": "object",
                    "properties": {
                        "description": {
                            "type": "string"
                        },
                        "channel_range": {
                            "type": "object",
                            "properties": {
                                "min_val": {
                                    "type": "number"
                                },
                                "max_val": {
                                    "type": "number"
                                }
                            }
                        },
                        "input_coupling": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "input_impedance": {
                            "type": "number"
                        },
                        "probe_attenuation": {
                            "type": "array",
                            "items": {
                                "type": "number"
                            }
                        },
                        "timebase": {
                            "type": "object",
                            "properties": {
                                "range": {
                                    "type": "object",
                                    "properties": {
                                        "min_val": {
                                            "type": "number"
                                        },
                                        "max_val": {
                                            "type": "number"
                                        }
                                    }
                                },
                                "horizontal_resolution": {
                                    "type": "number"
                                }
                            }
                        }
                    }
                }
            }
        },
        "bandwidth": {
            "type": "number"
        },
        "sampling_rate": {
            "type": "number"
        },
        "memory": {
            "type": "number"
        },
        "waveform_update_rate": {
            "type": "number"
        },
        "fft": {
            "type": "object",
            "properties": {
                "window_types": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "units": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "function_generator": {
            "type": "object",
            "properties": {
                "waveform_types": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "supported_states": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "offset": {
                    "type": "object",
                    "properties": {
                        "min_val": {
                            "type": "number"
                        },
                        "max_val": {
                            "type": "number"
                        }
                    }
                },
                "frequency": {
                    "type": "object",
                    "properties": {
                        "min_val": {
                            "type": "number"
                        },
                        "max_val": {
                            "type": "number"
                        }
                    }
                },
                "amplitude": {
                    "type": "object",
                    "properties": {
                        "min_val": {
                            "type": "number"
                        },
                        "max_val": {
                            "type": "number"
                        }
                    }
                }
            }
        }
    },
    "additionalProperties": true
}